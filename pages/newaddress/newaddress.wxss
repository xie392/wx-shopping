.name{
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid rgba(187, 187, 187, 0.486);
    color: #bbb;
    font-size: 28rpx;
    align-items: center;
    background: #fff;
}
.name input[type="text"]{
    min-width: 64%;
    padding-left: 30rpx;
    font-size: 32rpx;
    color: #333;
}

.icon{
    font-size: 32rpx;
    padding-right: 10rpx;
    padding-top: 5rpx;
    color: #333;
}
.name  .address{
    color: #333;
    font-size: 32rpx;
}

.text{
    align-items: flex-start;
    border-bottom: none;
}
.text #txt{
    width: 60%;
    min-height: 50rpx;
    max-height: 150rpx;
    font-size: 32rpx;
    padding-left: 30rpx;
    color: #333;
}

.bottom-default{
    background: #fff;
    width: 100%;
    height: 100rpx;
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left:30rpx;
    font-size: 32rpx;
}

.bottom-default switch{
    margin-right: 35rpx;
}

.btn{
    width: 300rpx;
    margin: 30rpx auto;
    padding: 16rpx 64rpx;
    background: #f36;
    color: #fff;
    text-align: center;
    box-shadow: 0 0 5rpx #f36;
    border-radius: 5rpx;
}
.del{
    background: none;
    color: #333;
    box-shadow: 0 0 5rpx #ccc;
}