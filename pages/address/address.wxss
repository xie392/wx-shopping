
.address {
    width: 94%;
    background: #fff;
    top: 30rpx;
    left: 3%;
    margin-bottom: 30rpx;
    border-radius: 12rpx;
    position: relative;
}

.address .title {
    width: 100%;
    padding-top: 16rpx;
}

.address .title .name {
    padding: 16rpx 32rpx;
    font-size: 28rpx;
}

.address .title .phone {
    font-size: 28rpx;
    color: #bbb;
}

.address .details {
    width: 92%;
    /* padding: 20rpx 32rpx; */
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid rgba(204, 204, 204, 0.603);
    margin: 20rpx auto;
    line-height: 40rpx;
    font-size: 28rpx;
}

.bottom-mod {
    width: 92%;
    margin: 0rpx auto;
    padding-bottom: 15rpx;
}

.bottom-mod text {
    font-size: 28rpx;
}

/*radio未选中时样式 */
radio .wx-radio-input {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
}


/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked {
    background: #f36 !important;
    border-color: #f36 !important;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before {
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}

.default{
    color: #f36;
    padding-top: 5rpx;
    line-height: 30rpx;
}
.del{
    position:absolute;
    right: 40rpx;
    top: 20rpx;
}

.mod{
    color: #bbb;
    font-size: 28rpx;
    padding-top: 5rpx;
    float: right;
    padding-right: 20rpx;
}
.bottom-btn{
    position: fixed;
    width: 100%;
    height: 100rpx;
    bottom: 0rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}
.button{
    display: inline-block;
    background: #f36;
    padding: 16rpx 64rpx;
    color: #fff;
    border-radius: 5rpx;
    box-shadow: 0 0 10rpx #f36;
  
}

.add{
    text-align: center;
    padding-top: 20rpx;
    font-size: 32rpx;
    color: #bbb;
    display: flex;
    flex-direction: column;
}
.add text{
    padding-top: 20rpx;
}

.add .iconfont{
    font-size: 64rpx;
}
