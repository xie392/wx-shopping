/* pages/search/search.wxss */
page{
    background: #fff;
}
.serach{
    width: 95%;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
input[type="text"]{
    border:1rpx solid rgb(49, 109, 238);
    width: 75%;
    border-radius: 50rpx;
    color: #333;
    font-size: 26rpx;
    height: 64rpx;
    padding-left: 64rpx;
}


.serach .btn{
    color: rgb(49, 109, 238);
    width: 100rpx;
    height: 64rpx;
    font-size: 32rpx;
    text-align: center;
    line-height: 64rpx;
    border-top-right-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
}
.serach .icon{
    position: absolute;
    font-size: 32rpx;
    left: 25rpx;
}

.history{
    width: 90%;
    margin: 60rpx auto;
}

.history-search{
    display: flex;
    align-items: center;
    font-size: 28rpx;
    justify-content: space-between;
}
.history-search .txt{
    font-weight: bold;
}

.history-search .del-icon{
    color: #bbb;
    font-size: 32rpx;
}

.history .history-text{
    margin-top: 10rpx;
}

.history .history-text text{
    display: inline-block;
    font-size: 24rpx;
    padding: 12rpx 20rpx;
    background-color: rgba(238, 238, 238, 0.596);
    border-radius: 50rpx;
    margin-right: 20rpx;
    margin-top: 15rpx;
    color: rgb(36, 35, 35);
    max-width: 500rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.ul{
    position: absolute;
    z-index: 9;
    background: #fff;
    width: 90%;
    left: 5%;
    /* min-height: 80vh; */
    top: 80rpx;
}
.ul .li{
    width: 100%;
    display: flex;
    align-items: center;
    color: #333;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #ccc;
    justify-content: space-between;
}
.ul .li .message{
    font-size: 28rpx;
    padding-left: 10rpx;
    display: inline-block;
    max-width: 600rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}