/* pages/class/class.wxss */
.goodslist{
    display: flex;
    padding: 20rpx 0px;
    background-color: #fff;
    margin-bottom: 2rpx;
}
.goodslist .left{
    width: 240rpx;
    text-align: center;
}
.goodslist .right{
    /* 剩下宽度分配给右侧 */
    flex:1;
    height: 200rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.goodslist .left image{
    width: 200rpx;
    height: 200rpx;
}
.goodslist .right image{
    width: 44rpx;
    height: 44rpx;
}
.goodslist .right .goods_name{
    box-sizing: border-box;
    font-size: 36rpx;
    /* padding-left: 32rpx; */
    color:#808080;
    height: 100rpx;
    /* 溢出隐藏 */
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break:break-all;
}
.goodslist .right .goods_address{
    font-size: 24rpx;
    color:#929292;
}
.goodslist .right .goods_price{
    font-size: 30rpx;
    color:#FF1493;
    box-sizing: border-box;
    padding-top: 42rpx;
    
}
.goodslist .right .car{
    position: absolute;
    right: 0px;
    bottom: 0px;
}